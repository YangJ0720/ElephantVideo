<resources>

    <!-- 欢迎界面主题样式 -->
    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部选项卡主题样式 -->
    <style name="TabHostTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 视频列表 -> 圆形头像主题样式 -->
    <style name="CircleIconTheme">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!-- 更换头像选择对话框样式 -->
    <style name="PortraitPopupWindowTheme">
        <item name="android:windowExitAnimation">@anim/popup_anim_hide</item>
        <item name="android:windowEnterAnimation">@anim/popup_anim_show</item>
    </style>

    <!-- 更换头像选择对话框按钮样式 -->
    <style name="PortraitSelectItemTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- 白色字体样式 -->
    <style name="WhiteTextTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 我的选项卡标签字体样式 -->
    <style name="PersonLabelTheme">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <!-- 我的选项卡右侧标签字体样式 -->
    <style name="PersonLabelSubTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:drawableRight">@drawable/ic_navigate_next_black_24dp</item>
    </style>

    <!-- 注册输入框样式 -->
    <style name="RegisterEditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
    </style>
</resources>
